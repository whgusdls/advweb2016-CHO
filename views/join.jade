extends ./layout.jade
block _head
		title join
		link(href='css/bootstrap.min.css', rel='stylesheet')
		script('text/javascript' src='js/user_reg_check.js')
block _body
		article.container
			.col-md-12
				.page-header
					h1 회원가입
				form.form-horizontal(method='post', action='/insert', onsubmit= "return user_reg_check() ", id='userreg')
					.form-group
						label.col-sm-3.control-label(for='inputEmail') 이메일
						.col-sm-6
							input#userid.form-control(name='userid',  type='email', placeholder='이메일')
					.form-group
						label.col-sm-3.control-label(for='inputPassword') 비밀번호
						.col-sm-6
							input#inputPassword.form-control(name='pw', type='password', placeholder='비밀번호')
							p.help-block 숫자, 특수문자 포함 8자 이상
					.form-group
						label.col-sm-3.control-label(for='inputPasswordCheck') 비밀번호 확인
						.col-sm-6
							input#inputPasswordCheck.form-control(name='pwcheck' type='password', placeholder='비밀번호 확인')
							p.help-block 비밀번호를 한번 더 입력해주세요.
					.form-group
						label.col-sm-3.control-label(for='inputName') 이름
						.col-sm-6
							input#inputName.form-control(name='name', type='text', placeholder='이름')
					.form-group
						label.col-sm-3.control-label(for='inputAddr') 주소
						.col-sm-6
							input#inputAddr.form-control(name='addr', type='text', placeholder='주소')
					.form-group
						label.col-sm-3.control-label(for='inputNumber') 휴대폰번호
						.col-sm-6
							.input-group
								input#inputNumber.form-control(type='tel', name='phone', placeholder='- 없이 입력해 주세요')
					.form-group
						.col-sm-12.text-center
							button.btn.btn-primary(type='submit', value='insert')
								| 회원가입
								i.fa.fa-check.spaceLeft

				hr
